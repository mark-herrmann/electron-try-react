{
  "name":  "electronreact",
  "repository": "github:mark-herrmann/electron-try-react",
  "homepage": "https://github.com/mark-herrmann/electron-try-react/",
  "description": "used for Proofs of concept",
  "author": {
    "name": "Mark Tester",
    "email": "mark-herrmann@mailbox.org",
    "url": "https://github.com/mark-herrmann/electron-try-react"
  },
  "version": "0.0.1-alpha.1",
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^16.0.8",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^6.0.0"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "de.markherrmann.electronreact",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "Education",
      "icon": "./public/icons/mac/icon.icns",
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "win": {
      "icon": "./public/icons/win/icon-256x256.png",
      "target": [
        "msi"
      ]
    },
    "linux": {
      "category": "Education",
      "icon": "./public/icons/lin/icon-128x128.png",
      "target": [
        "deb",
        "freebsd",
        "rpm",
        "AppImage",
        "snap"
      ],
      "desktop": {
        "Name": "Electron React",
        "Type": "Application",
        "GenericName": "Example Application"
      }
    },
    "dmg": {
      "icon": "dmg.icns"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "*.js"
    ]
  }
}
